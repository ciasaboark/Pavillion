<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.phobotic.pavillion.MainActivity"
    tools:showIn="@layout/app_bar_main"
    >

    <EditText
        android:id="@+id/location_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:gravity="center"
        android:hint="Enter Location"
        android:imeOptions="actionSearch"
        android:inputType="textCapCharacters|textNoSuggestions"
        android:maxLength="8"
        android:textSize="50dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/error_card"
        style="@style/ErrorCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location_input"
        android:layout_margin="16dp"
        android:clickable="true"
        android:stateListAnimator="@anim/lift_on_touch"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/error_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/error_card_message"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"/>

            <TextView
                android:id="@+id/error_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/error_card_title"
                android:layout_centerHorizontal="true"
                android:text="GA25547"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textSize="40dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_digits"
        style="@style/CheckDigitCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_input"
        android:layout_margin="16dp"
        android:clickable="true"
        android:stateListAnimator="@anim/lift_on_touch"
        android:visibility="invisible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cd_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="@dimen/card_location_text_height"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cd_location">

                <TextView
                    android:id="@+id/cd_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/card_location_padding"
                    android:textColor="@color/primary_text_default_material_dark"
                    android:textSize="@dimen/card_main_text_height"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="@dimen/card_location_padding"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cd_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:paddingRight="16dp"
                        android:paddingTop="@dimen/card_rotate_text_height"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/secondary_text_default_material_dark"
                        android:textSize="@dimen/card_rotate_text_height"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/cd_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/secondary_text_default_material_dark"
                        android:textSize="@dimen/card_rotate_text_height"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/cd_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:paddingLeft="16dp"
                        android:paddingTop="@dimen/card_rotate_text_height"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/secondary_text_default_material_dark"
                        android:textSize="@dimen/card_rotate_text_height"
                        android:textStyle="bold"/>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:src="@drawable/ic_magnify_white_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal">
    </android.support.design.widget.FloatingActionButton>

</RelativeLayout>
